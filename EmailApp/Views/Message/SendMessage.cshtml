@model SendMessageViewModel
@{
    ViewData["Title"] = "SendMessage";
}

<h3>Mesaj Gönder</h3>

<form method="post">
    <div class="form-group">
        <label>Alıcı Email</label>
        <input type="email" asp-for="ReceiverEmail" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Konu</label>
        <input type="text" asp-for="Subject" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Mesaj</label>
        <textarea type="text" asp-for="Body" class="form-control" rows="10" required> </textarea>
    </div>

    <span class="text-danger">@Html.ValidationSummary()</span>
    <br />
    <button type="submit" class="btn btn-primary">Gönder</button>
</form>


