@model RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<h3>Yeni Kullanıcı Kaydı</h3>

<form method="post">
    <div class="form-group">
        <label>Ad: </label>
        <input type="text" class="form-control" asp-for="FirstName" required></input>
    </div>

    <div class="form-group">
        <label>Soyad: </label>
        <input type="text" class="form-control" asp-for="LastName" required></input>
    </div>
    
    <div class="form-group">
        <label>Kullanıcı Adı: </label>
        <input type="text" class="form-control" asp-for="UserName" required></input>
    </div>

    <div class="form-group">
        <label>Email: </label>
        <input type="email" class="form-control" asp-for="Email" required></input>
    </div>

    <div class="form-group">
        <label>Şifre: </label>
        <input type="password" class="form-control" asp-for="Password" required></input>
    </div>

    <span class="text-danger">@Html.ValidationSummary()</span>

    <button class="btn btn-primary">Kayıt Ol</button>
</form>

