@model LoginViewModel
@{
    ViewData["Title"] = "Index";
}
<form method="post">
    <div class="form-group">
        <label>Email </label>
        <input type="email" class="form-control" asp-for="Email" required></input>
    </div>

    <div class="form-group">
        <label>Şifre </label>
        <input type="password" class="form-control" asp-for="Password" required></input>
    </div>

    <span class="text-danger">@Html.ValidationSummary()</span>

    <button type="submit" class="btn btn-primary">Giriş Yap</button>
</form>